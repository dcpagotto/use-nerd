# ============================================
# USE Nerd Storefront - Environment Variables
# ============================================

# ============================================
# Medusa Backend
# ============================================
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_your_publishable_key_here
NEXT_PUBLIC_MEDUSA_REGION_ID=reg_01XXXXX

# ============================================
# Strapi CMS
# ============================================
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337
NEXT_PUBLIC_STRAPI_API_TOKEN=

# ============================================
# Application Settings
# ============================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_DEFAULT_LOCALE=pt-BR

# ============================================
# Blockchain (Polygon)
# ============================================
NEXT_PUBLIC_POLYGON_NETWORK=polygon
# Options: polygon (mainnet) or mumbai (testnet)
NEXT_PUBLIC_POLYGON_CHAIN_ID=137
# 137 for polygon, 80001 for mumbai

# ============================================
# Analytics & Monitoring
# ============================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# Feature Flags
# ============================================
NEXT_PUBLIC_ENABLE_BLOCKCHAIN=true
NEXT_PUBLIC_ENABLE_RAFFLES=true
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_MAINTENANCE_BYPASS_TOKEN=

# ============================================
# Payment Providers (Client-side)
# ============================================
NEXT_PUBLIC_MERCADO_PAGO_PUBLIC_KEY=
NEXT_PUBLIC_COINBASE_COMMERCE_ENABLED=true
