# ============================================
# USE Nerd - Configuração de Ambiente
# ============================================

# ============================================
# Database Configuration
# ============================================
# Para Docker: use "postgres" | Para Local: use "localhost"
# sslmode=disable porque PostgreSQL local não usa SSL
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/use-nerd?sslmode=disable

# ============================================
# Redis Configuration
# ============================================
# Para Docker: use "redis" | Para Local: use "localhost"
REDIS_URL=redis://redis:6379

# ============================================
# CORS Configuration
# ============================================
STORE_CORS=http://localhost:8000,http://localhost:3000
ADMIN_CORS=http://localhost:5173,http://localhost:9000
AUTH_CORS=http://localhost:5173,http://localhost:9000,http://localhost:8000

# ============================================
# Security Secrets
# ============================================
# ⚠️ ATENÇÃO: Mude esses valores em produção!
JWT_SECRET=change-me-in-production
COOKIE_SECRET=change-me-in-production

# ============================================
# Node Environment
# ============================================
NODE_ENV=development
LOG_LEVEL=debug

# ============================================
# Medusa Admin
# ============================================
MEDUSA_ADMIN_ONBOARDING_TYPE=nextjs
MEDUSA_ADMIN_ONBOARDING_NEXTJS_DIRECTORY=use-nerd-storefront
ADMIN_EMAIL=admin@use-nerd.com.br
ADMIN_PASSWORD=supersecret

# ============================================
# Blockchain Configuration (Polygon)
# ============================================
# RPC URLs
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_CHAIN_ID=137

# Wallet Private Key (⚠️ NUNCA commite a chave real!)
PRIVATE_KEY=your-wallet-private-key-here
WALLET_PRIVATE_KEY=your-wallet-private-key-here

# Chainlink VRF (Verifiable Random Function) - Mumbai Testnet
CHAINLINK_VRF_COORDINATOR=0x7a1BaC17Ccc5b313516C5E16fb24f7659aA5ebed
CHAINLINK_VRF_KEY_HASH=0x4b09e658ed251bcafeebbc69400383d49f344ace09b9576fe248bb02c003fe9f
CHAINLINK_VRF_SUBSCRIPTION_ID=

# Contract Addresses (preenchido após deploy)
RAFFLE_CONTRACT_ADDRESS=
TICKET_NFT_CONTRACT_ADDRESS=
CONTRACT_ADDRESS=

# Gas Reporter
REPORT_GAS=false
COINMARKETCAP_API_KEY=

# ============================================
# Integrações Brasileiras - Frete
# ============================================
# Melhor Envio API
